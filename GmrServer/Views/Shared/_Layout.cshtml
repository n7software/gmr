<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <meta name="description" content="Giant Multiplayer Robot is a service that makes turn-based Civilization V multiplayer 
    games easy. Games are played by automatically exchanging save files, similiar to play by email multiplayer games." />
    <meta name="keywords" content="Civilization, Civ, GMR, Multiplayer" />

    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")?v=2" />
    <link href="@Url.Content("~/Content/jquery/jquery-ui-1.8.18.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery/jquery.qtip.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")?v=10" rel="stylesheet" type="text/css" />

    @if (!string.IsNullOrEmpty(ViewBag.CssSecondary))
    {
        <link href="@Url.Content("~/Content/" + ViewBag.CssSecondary + ".css")?v=14" rel="stylesheet" type="text/css" />
    }
    @if (!string.IsNullOrEmpty(ViewBag.Css))
    {
        <link href="@Url.Content("~/Content/" + ViewBag.Css + ".css")?v=14" rel="stylesheet" type="text/css" />
    }

    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.tools.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-effects.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.qtip.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/gmr.js")?v=16" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/login.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.loadingdots.js")" type="text/javascript"></script>
    <script type="text/javascript">
        setNotificationsClosedUrl('@Url.Action("PanelClosed", "Notifications")');
    </script>

    <!-- Google Analytics Code -->
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-29520991-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

        $(document).ready(function () {
            AddTooltip($('.tooltip'));
        });
    </script>
</head>

<body>

    <div id="fb-root"></div>
    <script>    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

    <div id="header-container">
        <div id="header">
            <div id="navigation">
                <img src="@Url.Content("~/Content/images/New_Unit_Mech_94.png")" id="gmr-logo" onclick="window.location='@Url.Content("~/")'" />

                <div id="menucontainer">
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home", null, new { id = "home" })</li>
                        <li>@Html.ActionLink("Games", "Index", "Game", null, new { id = "game" })</li>
                        <li>@Html.ActionLink("Community", "Index", "Community", null, new { id = "community" })</li>
                        <li>@Html.ActionLink("Download", "Index", "Download", null, new { id = "download" })</li>
                        <li>@Html.ActionLink("Support Us", "Index", "SupportUs", null, new { id = "supportus" })</li>
                    </ul>
                    <div class="fb-like" style="float: left; margin-left: 5px; margin-top: 15px;" data-href="http://facebook.com/MultiplayerRobot"
                        data-send="false" data-layout="button_count" data-show-faces="false" data-colorscheme="dark" data-font="verdana">
                    </div>
                </div>

                @Html.Partial("_LoginArea")

                <div id="notification-popup" class="popup-panel">
                    <div class="panel-loader"></div>
                </div>
                <div id="cp-popup" class="popup-panel">
                    <div class="panel-loader"></div>
                </div>

            </div>
        </div>
        <div id="header-shadow">
        </div>
        <div id="sub-header">
            <a href="/About/FAQ" id="need-help">Need Help?</a>

            <div id="header-stats">
                <strong>@String.Format("{0:0,0}", GmrServer.Global.GetTotalTurns())</strong> turns played across 
                <strong>@String.Format("{0:0,0}", @GmrServer.Global.GetTotalGames())</strong> games by 
                <strong>@String.Format("{0:0,0}", GmrServer.Global.GetTotalUsers())</strong> users
            </div>
        </div>
    </div>



    <div id="main-container">
        <div id="main">
            @RenderBody()
        </div>
        <div id="bottom-bar">
            @Html.ActionLink("Privacy Policy", "PrivacyPolicy", "About") |
        @Html.ActionLink("Terms of Use", "TermsOfUse", "About") |
        <a href="http://steampowered.com">Powered by Steam</a> |
            @Html.ActionLink("How we use Steam data", "SteamDataPolicy", "About") |
        @Html.ActionLink("FAQ", "FAQ", "About") |
        @Html.ActionLink("Contact us", "Us", "About") |
        Have a nice day :)<br />
            <br />
            <div id="copyright">
                Copyright &copy; @DateTime.UtcNow.Year
                    <a href="http://n7software.com" target="_blank"><img src="~/Content/Images/n7-logo-small.png" alt="N7 Software" /></a>
                </div>
            Except Steam, which is owned by Valve Corporation<br />
            and any Civ V icons, which are owned by Firaxis Games
        <br />
            <br />
            <br />
        </div>
    </div>

</body>
</html>
